<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.EasyFileRecovery" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/c_f0f5ff</item>
        <item name="android:windowBackground">@drawable/bg_page</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="TabTextStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Material3.TabLayout">
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabIndicator">@drawable/shape_tab_indicator</item>
        <item name="tabIndicatorColor">@color/c_main</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">#B1B4C0</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

</resources>